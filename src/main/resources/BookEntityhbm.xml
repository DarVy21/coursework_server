<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="Server.Model.BookEntity" table="books" schema="public">
        <id name="id_book">
            <column name="id_book" sql-type="int"/>
        </id>
        <property name="name">
            <column name="name" sql-type="varchar(45)" length="45"/>
        </property>
        <property name="type">
            <column name="type" sql-type="varchar(45)" length="45"/>
        </property>
        <property name="author">
            <column name="author" sql-type="varchar(45)" length="45"/>
        </property>

        <property name="amount">
            <column name="amount" sql-type="int"/>
        </property>
        <property name="price">
            <column name="price" sql-type="double"/>
        </property>
    </class>
</hibernate-mapping>